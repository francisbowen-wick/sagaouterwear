{% if grid_image_width %}
  {%- assign grid_image_width_2 = grid_image_width | split:'x' -%}
  {%- assign grid_image_width_2 = grid_image_width_2[0] | times:  2 | append: 'x' -%}
{% else %}
  {%- assign grid_image_width_2 = '1100x' -%}
{% endif %}

{% include 'pro-code-deals' %}

<div class="grid-view-item{% unless grid_variant.available %} product-price--sold-out grid-view-item--sold-out{% endunless %}">
  <a class="grid-view-item__link animsition-link {% unless product.tags contains "deadstock" %}{{grid_variant.option1 | handleize}}{%endunless%}" href="{{ grid_variant.url | within: collection }}">
    <div class="grid-view-item__image" style="background-image:url({{ grid_variant.image.src | img_url: grid_image_width_2 }});"></div>
    <div class="h4 grid-view-item__title">
      {{ product.title }}
      {% if show_variant_title %}
        {% if show_variant_colors_only %}
          <span>{{ grid_variant.option1 }}</span>
        {% else %}
          <span>{{ grid_variant.title }}</span>
        {% endif %}
      {% endif %}
    </div>
    {% if section.settings.show_vendor %}
      <div class="grid-view-item__vendor">{{ product.vendor }}</div>
    {% endif %}
    <div class="grid-view-item__meta">
      {% include 'product-price' %}
    </div>
  </a>
</div>
