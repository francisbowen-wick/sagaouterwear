<style>
  {% if block.settings.text_bg != blank %}
    .slideshow--textside_image_fifty.slideshow__slide--{{ block.id }} {
      background: {{ block.settings.text_bg }};
    }
    .slideshow--textside_image_quarter.slideshow__slide--{{ block.id }} .slideshow__image .slideshow__image-offseter:before {
