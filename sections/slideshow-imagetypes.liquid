<div class="{{ section.settings.contained }}">
  <div class="row" data-section-id="{{ section.id }}" data-section-type="slideshow-section">

    {% if section.blocks.size > 0 %}
      <div class="col-60 slideshow-wrapper">
        <button type="button" class="visually-hidden slideshow__pause" data-id="{{ section.id }}" aria-live="polite">
          <span class="slideshow__pause-stop">
            {% include 'icon-pause' %}
            <span class="icon__fallback-text">{{ 'sections.slideshow.pause_slideshow' | t }}</span>
          </span>
          <span class="slideshow__pause-play">
            {% include 'icon-play' %}
            <span class="icon__fallback-text">{{ 'sections.slideshow.play_slideshow' | t }}</span>
          </span>
        </button>

        <div class="slideshow slideshow--{{ section.settings.slideshow_height }}" id="Slideshow-{{ section.id }}" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed }}" data-dots="{{ section.settings.dots }}" data-arrows="{{ section.settings.arrows }}">
          {% for block in section.blocks %}

            <div class="slideshow__slide slideshow__slide--{{ block.id }} slideshow--textside_{{ block.type }}" {{ block.shopify_attributes }}>

              {% include 'slideshow-style' %}

              <div class="slideshow__image slideshow__image--{{ block.id }} slideshow__image--{{ block.settings.text_layout }}">
                {% if block.settings.image == blank %}
                  <div class="placeholder-background">
                    {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                {% if block.settings.logo_image != blank %}
                  <img src="{{ block.settings.logo_image | img_url: '450x' }}" alt="{{ block.settings.title }}" />
                {% endif %}
                {% if block.type == 'image_quarter' %}
                  <div class="slideshow__image-offseter column--{{ block.settings.text_layout_quarter }}"></div>
                {% endif %}
              </div>
              <div class="slideshow__text-wrap slideshow--{{ block.type }} slideshow__text--{{ block.id }} row{% if block.settings.overlay %} slideshow__overlay{% endif %} slideshow__vert-{{ block.settings.text_layout_vert }} slideshow__vert-{{ block.settings.text_layout_vert_mobile }}--mobile">
                <div class="{% if block.settings.text_layout_quarter != blank %}col-lg-15 col-md-30{% if block.settings.text_layout_quarter == 'second' %} offset-lg-15{% elsif block.settings.text_layout_quarter == 'third' %} offset-md-30{% elsif block.settings.text_layout_quarter == 'fourth' %} offset-lg-45 offset-md-30{% endif %}{% else %}col-md-30{% if block.settings.text_layout == 'center' %} offset-md-15{% elsif block.settings.text_layout == 'right' %} offset-md-30{% endif %}{% endif %}{% if block.type == 'image_quarter' or block.type == 'image_fifty' %} col-30{% endif %} text-{{ block.settings.text_align }} small--text-{{ block.settings.text_align_mobile }} slideshow__text-content">
                  <div class="page-width">
                    {% case block.type %}
                      {% when 'image_w_overlay' %}
                    
                        {% if block.settings.line_position == 'left' %}
                          {% assign line_position = "line-left" %}
                        {% elsif block.settings.line_position == 'center' %}
                          {% assign line_position = "line-center" %}
                        {% elsif block.settings.line_position == 'right' %}
                          {% assign line_position = "line-right" %} 
                        {% endif %}
                        
                        {% unless block.settings.title == blank %}
                          <h2 class="h1 mega-title slideshow__title{% if block.settings.hide_title_mobile %} hidden-sm-down{% endif %}">
                            <span>{{ block.settings.title | escape }}</span>
                          </h2>
                        {% endunless %}
                    	{% unless block.settings.title == blank and block.settings.subheading == blank %}
                          <div class="sub-heading-wrap{% if block.settings.hide_subheading_mobile %} hidden-sm-down{% endif %}">
                            <h5 class="{{line_position}}"><span class="mega-subtitle slideshow__subtitle">{{ block.settings.subheading | escape }}</span></h5>
                          </div>
                        {% endunless %}
                        {% include 'slideshow-buttons' %}

                      {% when 'image_fifty' %}
                    
                        {% unless block.settings.title == blank %}
                          <h2 class="h1 mega-title slideshow__title{% if block.settings.hide_title_mobile %} hidden-sm-down{% endif %}">
                            <span>{{ block.settings.title | escape }}</span>
                          </h2>
                        {% endunless %}
                        {% unless block.settings.title == blank and block.settings.subheading == blank %}
                          <h4 class="mega-subtitle slideshow__subtitle{% if block.settings.hide_subheading_mobile %} hidden-sm-down{% endif %}">{{ block.settings.subheading | escape }}</h4>
                        {% endunless %}
                        {% if block.settings.content != blank %}
                          <div class="slideshow__content rte{% if block.settings.hide_content_mobile %} hidden-sm-down{% endif %}">
                            {{ block.settings.content }}
                          </div>
                        {% endif %}
                        <div class="line-block"></div>
                        {% include 'slideshow-buttons' %}

                      {% when 'image_quarter' %}
                    
                        {% unless block.settings.title == blank %}
                          <h2 class="h1 mega-title slideshow__title{% if block.settings.hide_title_mobile %} hidden-sm-down{% endif %}">
                            <span>{{ block.settings.title | escape }}</span>
                          </h2>
                        {% endunless %}
                        {% unless block.settings.title == blank and block.settings.subheading == blank %}
                          <h4 class="mega-subtitle slideshow__subtitle{% if block.settings.hide_subheading_mobile %} hidden-sm-down{% endif %}">{{ block.settings.subheading | escape }}</h4>
                        {% endunless %}
                        {% if block.settings.content != blank %}
                          <div class="slideshow__content rte{% if block.settings.hide_content_mobile %} hidden-sm-down{% endif %}">
                            {{ block.settings.content }}
                          </div>
                        {% endif %}
                        <div class="line-block"></div>
                        {% include 'slideshow-buttons' %}

                      {% when 'image_w_buttons' %}
                        
                        {% unless block.settings.title == blank %}
                          <h2 class="h1 mega-title slideshow__title{% if block.settings.hide_title_mobile %} hidden-sm-down{% endif %}">
                            <span>{{ block.settings.title | escape }}</span>
                          </h2>
                        {% endunless %}
                    	{% unless block.settings.title == blank and block.settings.subheading == blank %}
                          <div class="sub-heading-wrap{% if block.settings.hide_subheading_mobile %} hidden-sm-down{% endif %}">
                            <h5 class="line-center text-center"><span class="mega-subtitle slideshow__subtitle">{{ block.settings.subheading | escape }}</span></h5>
                          </div>
                        {% endunless %}
                        <div class="line-block"></div>
                        {% include 'slideshow-buttons' %}

                    {% endcase %}
                  </div>
                </div>
              </div>

            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      <div class="placeholder-noblocks">
        {{ 'homepage.onboarding.no_content' | t }}
      </div>
    {% endif %}
  </div>
</div>

