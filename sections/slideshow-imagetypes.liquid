<script>
  $(document).ready(function() {
    resizeSubheadingWrapToTitleText();
  });
  $( window ).resize(function() {
    resizeSubheadingWrapToTitleText();
  });
  function resizeSubheadingWrapToTitleText() {
    if($( window ).width() > 768) {
      $('.slideshow__title').each(function() {
        var slideTitleWidth = $(this).children('span').width() + 10;
        console.log('width: '+slideTitleWidth);
        var subheading = $(this).siblings('.sub-heading-wrap').first().children('h5').first();
        subheading.css('width',slideTitleWidth+'px');
      });
    }
  }
</script>

{% if section.settings.slideshow_height == 'maintain_ratio' %}
  <style type="text/css">
    #shopify-section-{{ section.id }} .slideshow.slideshow--maintain_ratio .slideshow__slide:before {
      content: '';
      display: block;
      width: 100%;
      height: 0px;
    }
    @media screen and (min-width: 768px) {
      #shopify-section-{{ section.id }} .slideshow.slideshow--maintain_ratio .slideshow__slide:before {
        {% capture img_width %}{{ section.blocks[0].settings.image.width }}{% endcapture %}
        {% capture img_height %}{{ section.blocks[0].settings.image.height | times: 100 }}{% endcapture %}
        {% capture rounddown %}{{ img_height | divided_by: img_width }}{% endcapture %}
        padding-top: {{ rounddown | plus: 1 }}%;
      }
    }
  </style>
{% endif %}

