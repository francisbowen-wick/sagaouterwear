
{% include 'new-gallery-content' %}
  
{% schema %}
    {
      "name": "New Gallery",
      "class": "index-section",
      "max_blocks": 4,
      "settings": [
        {
            "type": "checkbox",
            "id": "visible",
            "label": "Show Section",
            "default": true
        },
        {	
            "type": "header",	
            "content": "Margin Spacing"	
        },	
        {	
            "type": "range",	
            "id": "ptop",	
            "label": "Top spacing desktop",	
            "min": 0,	
            "unit": "px",	
            "max": 500,	
            "step": 5,	
            "default": 0	
        },	
        {	
            "type": "range",	
            "id": "pbottom",	
            "label": "Bottom spacing desktop",	
            "min": 0,	
            "unit": "px",	
            "max": 500,	
            "step": 5,	
            "default": 10	
        },	
        {
            "type": "range",
            "id": "ptop_mob",
            "label": "Top spacing mobile",
            "min": 0,
            "unit": "px",
            "max": 500,
            "step": 5,
            "default": 0
        },
        {
            "type": "range",
            "id": "pbottom_mob",
            "label": "Bottom spacing mobile",
            "min": 0,
            "unit": "px",
            "max": 500,
            "step": 5,
            "default": 5
        },
        {
          "type": "select",
          "id": "section_height",
          "label": "Section height",
          "default": "medium",
          "options": [
            {
              "label": "Extra Small",
              "value": "x-small"
            },
            {
              "label": "Small",
              "value": "small"
            },
            {
              "label": "Medium",
              "value": "medium"
            },
            {
              "label": "Large",
              "value": "large"
            },
            {
              "label": "Extra Large",
              "value": "x-large"
            },
            {
              "label": "Maintain Ratio based",
              "value": "maintain_ratio"
            }
          ]
        }
      ],
      "blocks": [
        {
          "type": "image",
          "name": "Image",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "select",
              "id": "alignment",
              "label": "Image alignment",
              "default": "center",
              "options": [
                {
                  "value": "top",
                  "label": "Top"
                },
                {
                  "value": "center",
                  "label": "Middle"
                },
                {
                  "value": "bottom",
                  "label": "Bottom"
                }
              ]
            },
            {
              "type": "url",
              "id": "link",
              "label": "Link",
              "info": "Optional"
            },
            {		
              "type": "header",		
              "content": "Hover Setting"		
            },		
            {		
                "type": "checkbox",		
                "id": "enable_hover",		
                "label": "Enable hover Effect"		
            },		
            {
              "type": "text",
              "id": "hover_text",
              "label": "Text"
            },          
            {
              "type": "color",
              "id": "hover_text_color",
              "label": "Text Color",
              "default": "#000000"
            },
            {
                "type": "range",
                "id": "hover_text_font",
                "label": "Font Size",
                "min": 12,
                "max": 100,
                "step": 2,
                "unit": "px",
                "default": 30
            }          
          
          ]
        }
      ],
      "presets": [
        {
            "name": "New Gallery",
            "category": "Image",
            "blocks": [
                {
                    "type": "image"
                },
                {
                    "type": "image"
                },
                {
                    "type": "image"
                }
            ]
        }
      ]
    }
{% endschema %}
  